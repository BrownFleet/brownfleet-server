#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

set -euo pipefail
LC_ALL=C

if [ "$current_branch" = "main" ]; then
  echo "âŒ Direct commits to 'main' branch are not allowed."
  echo "ğŸ‘‰ Please create a feature branch and commit there."
  exit 1
fi

# Validate branch name
local_branch="$(git rev-parse --abbrev-ref HEAD)"
valid_branch_regex="^(feature|bugfix|improvement|library|prerelease|release|hotfix)\/([0-9._-]+|(NO_TASK-.+))$"

if ! echo "$local_branch" | grep -qE "$valid_branch_regex"; then
  echo "âŒ Invalid branch name: \"$local_branch\""
  echo "âœ… Expected format: $valid_branch_regex"
  echo "ğŸ‘‰ Rename your branch to follow naming conventions and try again."
  exit 1
fi


echo "ğŸ” Running TypeScript type check..."
npm run type-check

echo "ğŸ” Running ESLint..."
npm run lint

echo "ğŸ” Running Prettier format check..."
npm run format:check