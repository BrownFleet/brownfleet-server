#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

current_branch="$(git rev-parse --abbrev-ref HEAD)"
if [ "$current_branch" = "main" ]; then
  echo "âŒ Direct pushes to 'main' branch are not allowed."
  echo "ğŸ‘‰ Please push to a feature branch or create a pull request."
  exit 1
fi

echo "ğŸ” Running circular dependency check..."
npm run find-circulars

echo "ğŸ” Running tests before push..."
npm run test:pre-push
