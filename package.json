{
  "name": "brownfleet-server",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "prepare": "npx --no-install husky install || true",
    "type-check": "tsc --noEmit",
    "format:check": "prettier --check .",
    "find-circulars": "madge --circular src",
    "typeorm": "typeorm-ts-node-commonjs -d src/config/database.ts",
    "typeorm:prod": "NODE_OPTIONS='--max-old-space-size=256' typeorm -d dist/config/migration-data-source.js",
    "migration:generate": "cross-env TS_NODE_PROJECT=tsconfig.json npm run typeorm -- migration:generate src/migrations/",
    "migration:run": "npm run typeorm migration:run",
    "migration:run:prod": "npm run typeorm:prod migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "migration:revert:prod": "npm run typeorm:prod migration:revert",
    "pg:dump": "cross-env ./scripts/pg-dump.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.15",
    "winston": "^3.17.0",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "madge": "^8.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  }
}
